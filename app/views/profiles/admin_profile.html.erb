<%= render 'header' %>
<p>You are an admin! <%= @user.admin %></p>
<ul class="nav nav-tabs header-profile-tabs" id="myTab" role="tablist">
  <li class="nav-item profile-tabs">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Future bookings</a>
  </li>
  <li class="nav-item profile-tabs">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Past bookings</a>
  </li>
  <li class="nav-item profile-tabs">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Your buildings</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show styling-tab active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <p>test tab home</p>
  </div>
  <div class="tab-pane fade styling-tab" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <p>test tab profile</p>
  </div>
  <div class="tab-pane fade styling-tab" id="contact" role="tabpanel" aria-labelledby="contact-tab">
    <% @buildings.each do |building| %>
      <ul class="lists">
        <li><%= link_to building.name, building_path(building) %>
            <%= link_to image_tag('corb'), building_path(building), method: :delete, data: { confirm: "Are you sure to delete this building?" } %>
        </li>
      </ul>
    <% end %>
    <%= link_to 'Create a building', new_building_path, class: 'create-button' %>
  </div>
</div>
